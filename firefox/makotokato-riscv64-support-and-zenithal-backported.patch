+    #[test]
+    fn $test_name() {
+        let _m = ::FORK_MTX.lock().expect("Mutex got poisoned by another test");
+        // The `exec`d process will write to `writer`, and we'll read that
+        // data from `reader`.
+        let (reader, writer) = pipe().unwrap();
